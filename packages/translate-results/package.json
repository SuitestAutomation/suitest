{
  "name": "@suitest/translate-results",
  "scripts": {
    "build": "rimraf build && tsc",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "tslint -p ."
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(j|t)s?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/lib/__tests__/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/lib/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "jest": "24.9.0",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "tslint": "5.19.0",
    "typescript": "3.6.2"
  }
}
